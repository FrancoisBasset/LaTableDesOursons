{% extends 'base.html.twig' %}

{% block title %}Changer le mot de passe{% endblock %}

{% block body %}
	{% include 'menu/_admin.html.twig' %}
	<br><br><br><br>

	<div style='text-align: center'>
		<h5>Changer le mot de passe</h5>

		{{ form_start(form) }}
			{{ form_label(form.password.first, 'Mot de passe', {'attr': {'class': 'form-label'}}) }}
			{{ form_widget(form.password.first, {'attr': {'class': 'form-control'}}) }}
			<br>

			{{ form_label(form.password.second, 'Confirmation mot de passe', {'attr': {'class': 'form-label'}}) }}
			{{ form_widget(form.password.second, {'attr': {'class': 'form-control'}}) }}
			<br>

			{{ form_errors(form.password.first) }}
			
			<button class='btn btn-success'>Modifier le mot de passe</button>
		{{ form_end(form) }}
	</div>
{% endblock %}