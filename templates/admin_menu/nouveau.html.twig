{% extends 'base.html.twig' %}

{% block title %}Créer un menu{% endblock %}

{% block body %}
	{% include 'menu/_admin.html.twig' %}
	<br><br><br><br>

	<div style='text-align: center'>
		<h5>Créer un menu</h5>

		{{ form_start(form) }}
			{{ form_label(form.nom, null, {'attr': {'class':'form-label'}}) }}
			{{ form_widget(form.nom, {'attr': {'class':'form-control'}}) }}
			<br>

			{{ form_label(form.prix, null, {'attr': {'class':'form-label'}}) }}
			{{ form_widget(form.prix, {'attr': {'class':'form-control'}}) }}
			<br>

			{{ form_label(form.categories, null, {'attr': {'class':'form-label'}}) }}
			{{ form_widget(form.categories, {'attr': {'class':'form-control'}}) }}
			<br>

			<button class='btn btn-success'>Créer le menu</button>
		{{ form_end(form) }}
	</div>
{% endblock %}
