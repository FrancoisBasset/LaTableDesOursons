{% extends 'base.html.twig' %}

{% block title %}Liste des plats{% endblock %}

{% block body %}
	{% include 'menu/_admin.html.twig' %}
	<br><br><br><br>

	<div style='text-align: center'>
		<h5>Liste des plats</h5>
		<table style='text-align: center; width: 100%'>
			<thead>
				<tr>
					<td>Id</td>
					<td>Nom</td>
					<td>Prix</td>
					<td>Image</td>
				</tr>
			</thead>
			<tbody>
				{% for plat in plats %}
					<tr>
						<td>{{ plat.id }}</td>
						<td>{{ plat.nom }}</td>
						<td>{{ plat.prix }}</td>
						<td><img src='{{ asset('img/' ~ plat.image ~ '.jpg') }}' height='150px'></td>
					</tr>
				{% endfor %}
			</tbody>
		</table>
	</div>
{% endblock %}